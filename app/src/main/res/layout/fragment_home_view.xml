<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Views.HomeView.HomeViewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#464646"
        android:id="@+id/relativeLayout">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/progressBar"
            android:layout_width="220dp"
            android:layout_height="213dp"
            android:layout_centerInParent="true"
            app:cpb_background_progressbar_color="#ffffff"
            app:cpb_background_progressbar_width="10dp"
            app:cpb_progressbar_color="#F44336"
            app:cpb_progressbar_width="10dp"/>

        <TextView
            android:textColor="#ffff80"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="43%"
            android:textSize="40dp" />

        <TextView
            android:textColor="#ffff80"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="34dp"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:text="1600"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="23dp"
            android:src="@drawable/banana" />

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="317dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:background="#FFFFFF">


        <ImageButton
            android:id="@+id/newMissionButton"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/todayMissionButton"
            android:layout_toStartOf="@+id/todayMissionButton"
            android:background="#ffffff"
            android:scaleType="fitXY"
            android:src="@drawable/newmissionbtn"
            android:text="Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/todayMissionButton"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#ffffff"
            android:scaleType="fitXY"
            android:src="@drawable/nowmissionbtn"
            android:text="Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newMissionButton"/>

        <ImageButton
            android:id="@+id/badgeButton"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_alignLeft="@+id/newMissionButton"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/newMissionButton"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="#ffffff"
            android:scaleType="fitXY"
            android:src="@drawable/titlebtn"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logButton"/>

        <ImageButton
            android:id="@+id/logButton"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/badgeButton"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/newMissionButton"
            android:layout_toRightOf="@+id/newMissionButton"
            android:background="#ffffff"
            android:scaleType="fitXY"
            android:src="@drawable/mylogbtn"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>







</RelativeLayout>