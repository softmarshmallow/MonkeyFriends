<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.RankView.RankViewFragment">

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:textSize="35dp"
        android:text="Notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/face"
        app:civ_border_color="#FFFFFF" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:background="#00000000"
        android:text="민제님에게서 선전포고! \n 걸어서 대림역까지 가십시오 \n 보상 : 바나나300개" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/profile2"
            app:civ_border_color="#FFFFFF" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#00000000"
            android:text="축하드립니다! \n 대림역까지 걸어가기 미션성공 하였습니다. \n 보상 바나나 300개" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/face"
            app:civ_border_color="#FFFFFF" />

        <Button
            android:text="오늘총 8000보 를 걸어\n 바나나를 80개를 획득 하였습니다."
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:background="#00000000"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/face"
            app:civ_border_color="#FFFFFF" />
        <Button
            android:text="새로운 친구, 우주님께 선전포고를 하세요!"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:background="#00000000"
            android:layout_height="80dp" />
    </LinearLayout>



</LinearLayout>